<div class="space-y-10 lg:space-y-14">
  {%- for post in posts -%}
    {% set postContent = post.templateContent | striptags | truncate(250) %}
    <article class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-12">
      {% if postContent %}
        <div class="col-span-1 lg:col-span-4 xl:col-span-5">
          <a class="block" title="{{ post.data.title }}" href="{{ post.url }}">
            <img src="{{ post.data.image }}" class="max-w-full h-auto" alt="{{ title }}" />
          </a>
        </div>
        <div class="col-span-1 lg:col-span-8 xl:col-span-7 space-y-6">
          <div class="flex flex-col space-y-2">
            <a class="block" title="{{ post.data.title }}" href="{{ post.url }}">
              <h2 class="font-semibold lg:font-bold text-lg lg:text-2xl xl:text-3xl tracking-tight">
                {{ post.data.title }}
              </h2>
            </a>
            <time class="text-gray-600 text-sm font-medium">
              {{ post.date.toUTCString().slice(0,16)}}
            </time>
          </div>
          <div class="text-gray-800 leading-relaxed">
            {{ postContent }}
          </div>
        </div>
      {% else %}
        <div class="col-span-12 relative">
          <a class="block border-2 border-black" title="{{ post.data.title }}" href="{{ post.url }}">
            <img src="{{ post.data.image }}" class="max-w-full h-auto w-full" alt="{{ title }}" />
          </a>
          <div class="bg-black text-white px-10 py-8 space-y-2">
            <a class="block" title="{{ post.data.title }}" href="{{ post.url }}">
              <h2 class="font-semibold lg:font-bold text-lg lg:text-2xl xl:text-3xl tracking-tight">
                {{ post.data.title }}
              </h2>
            </a>
            <time class="text-gray-400 text-sm font-medium">
              {{ post.date.toUTCString().slice(0,16)}}
            </time>
          </div>
        </div>
      {% endif %}
    </article>
  {%- endfor -%}
</div>
